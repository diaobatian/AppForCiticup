<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wrapper"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/timeofchat_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/shadow"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:text="ewfregreg"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <RelativeLayout
        android:id="@+id/messagelinearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/timeofchat_text"
        android:paddingBottom="10dp" >

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_message_left"
            android:focusable="true"
            android:maxWidth="250dp"
            android:paddingBottom="7dp"
            android:paddingLeft="15dp"
            android:paddingRight="8dp"
            android:paddingTop="7dp"
            android:singleLine="false"
            android:text="hellodewfrefre"
            android:textColor="#000000"
            android:textSize="16sp" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/messagelinearlayout"
        android:layout_toRightOf="@+id/messagelinearlayout" 
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/messageimage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/messagelinearlayout"
        android:layout_toRightOf="@+id/messagelinearlayout"
        android:background="@drawable/mobile_unverify_icon"
        android:contentDescription="@string/app_name"
        android:maxHeight="25dp"
        android:maxWidth="25dp" 
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:visibility="gone"/>

</RelativeLayout>