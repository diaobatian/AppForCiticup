<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wrapper"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/timeofchat_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/shadow"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:text="fewtert5rt5"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <RelativeLayout
        android:id="@+id/messagelinearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/timeofchat_right"
        android:paddingBottom="10dp" >

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_message_right"
            android:focusable="true"
            android:maxWidth="250dp"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:paddingTop="7dp"
            android:singleLine="false"
            android:text="hellodewfrefre"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </RelativeLayout>

    <ProgressBar
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/messagelinearlayout"
        	android:layout_toLeftOf="@+id/messagelinearlayout"
        	android:layout_marginRight="5dp"
        	android:layout_marginTop="10dp"
        	android:visibility="gone"/>
    
    <ImageView
        android:id="@+id/messageimage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/messagelinearlayout"
        android:layout_toLeftOf="@+id/messagelinearlayout"
        android:background="@drawable/mobile_unverify_icon"
        android:contentDescription="@string/app_name"
        android:maxHeight="25dp"
        android:maxWidth="25dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"/>

</RelativeLayout>