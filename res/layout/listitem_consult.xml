<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear5"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:minHeight="65dp"
    android:orientation="horizontal" >

    <com.citi.mc.badge.BadgeButton
        android:id="@+id/consult_img"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="10dip"
        android:focusable="false" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants" >

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
	            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/consult_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:text=""
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="16sp" />
              <TextView
                android:id="@+id/lixian_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#B3B3B3"
                android:text=""
                android:textSize="12sp" />
               </LinearLayout> 

            <TextView
                android:id="@+id/consult_item_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxWidth="250dp"
                android:singleLine="true"
                android:text="颠三倒四反对反对"
                android:textColor="#B3B3B3"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:singleLine="true"
                android:textColor="#B3B3B3"
                android:textSize="13sp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/linear09"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:visibility="gone">

            <!--  <Button
                android:id="@+id/del"
                android:layout_width="26dip"
                android:layout_height="26dip"
                android:layout_marginTop="7dp"
                android:background="@drawable/delete_icon"
                  android:background="@drawable/delete_icon"
                android:focusable="false" />-->
                <ImageButton
                    
                android:id="@+id/del"
                android:layout_gravity="center_vertical"
                android:layout_width="50dip"
       			android:layout_height="50dip"
                android:gravity="center"
            	android:background="@color/full_transparent"
             	android:src="@drawable/delete_icon"
                android:focusable="false" />

        </RelativeLayout>
    </RelativeLayout>

