<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item >

        <shape >
            <corners
                android:bottomLeftRadius="9.0dip"
                android:bottomRightRadius="9.0dip"
                android:topLeftRadius="9.0dip"
                android:topRightRadius="9.0dip" />

            <padding
                android:bottom="3.0dip"
                android:left="3.0dip"
                android:right="3.0dip"
                android:top="3.0dip" />

            <gradient android:startColor="@color/my_gray"

               android:endColor="@color/my_gray"

                android:type="linear"

               android:angle="270"/>

        </shape>

    </item>

     <item android:top="3dip" android:right="3dip"  android:bottom="3dip" android:left="3dip">

        <shape >

      

            <gradient android:startColor="@color/my_gray"

               android:endColor="@color/my_gray"
				
                android:type="linear"

               android:angle="270"/>

        </shape>

    </item>

</layer-list>
